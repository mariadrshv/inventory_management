<form method="post" action="{{ path('maintenance_delete', {'id': maintenance.id, 'entity_id': entity.id, 'entity': entity}) }}"
      onsubmit="return confirm('Are you sure you want to delete this maintenance?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ maintenance.id) }}">
    <button class="btn">Delete</button>
</form>
