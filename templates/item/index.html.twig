{% extends 'item/breadcrumbs.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <h1>Item index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.type }}</td>
                <td>
                    <a href="{{ path('item_show', {'id': item.id, 'room_id': room.id, 'prop_id': property.id}) }}">show</a>
                    <a href="{{ path('item_edit', {'id': item.id, 'room_id': room.id, 'prop_id': property.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('item_new', {'room_id': room.id, 'prop_id': property.id}) }}">Create new</a><br>
    <a href="{{ path('room_index',  {'id': room.id, 'prop_id': property.id }) }}">Back to room list</a><br>
    <a href="{{ path('app_logout') }}">Logout</a>
{% endblock %}
