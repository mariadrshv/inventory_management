<form method="post" action="{{ path('warranties_delete', {'id': warranty.id, 'entity_id': entity.id, 'entity': entity}) }}"
      onsubmit="return confirm('Are you sure you want to delete this warranty?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ warranty.id) }}">
    <button class="btn">Delete</button>
</form>
