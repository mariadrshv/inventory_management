{% extends 'room/breadcrumbs.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Dimensions</th>
                <td>{{ room.width }} {{ '/' }} {{ room.height }}{{ '/' }} {{ room.depth }} {{ '(width/height/depth)' }}</td>
            </tr>
            <tr>
                <th>Paint Color</th>
                <td>{{ room.paintColor }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ room.note }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset(photo) }}" height="50" width="50" alt=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('item_index', {'prop_id': property.id, 'room_id':room.id}) }}">Room items</a><br>

    <a href="{{ path('warranties_list', {'entity': 'room', 'entity_id': room.id} )}}">Room warranties</a><br>

    <a href="{{ path('maintenance_list', {'entity': 'room', 'entity_id': room.id} )}}">Room maintenance</a><br>

    <a href="{{ path('room_index',  {'id': room.id, 'prop_id': property.id }) }}">Back to room list</a><br>

    <a href="{{ path('room_edit', {'id': room.id, 'prop_id': property.id}) }}">Edit</a><br>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
